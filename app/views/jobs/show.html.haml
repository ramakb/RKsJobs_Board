#jobs
	.job
		%h3= @job.title
		%p= @job.description
		%p= @job.company
		%button.btn.btn-default= link_to "Apply for Job", job_path

#links
	= link_to "Home", root_path, class:	"btn btn-sm btn-default"
	= link_to "Edit", edit_job_path(@job), class:	"btn btn-sm btn-default"
	= link_to "Delete", job_path(@job), method: :delete, data: { confirm: "Are you sure you want to delete ?" }, class:	"btn btn-sm btn-default"